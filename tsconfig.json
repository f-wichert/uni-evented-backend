{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts", ".eslintrc.js"]
}
